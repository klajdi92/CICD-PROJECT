pipeline {
    agent any

    stages {

        stage('Sonar quality check') {
            agent {
                docker {
                    image  'maven'
                }
            }
            steps {
                script {

                    withSonarQubeEnv(credentialsId: 'sonar-tokenss') {

                        sh 'mvn clean package sonar:sonar'

                 }
                }
            }

        }

        stage('Sonar quality gate status') {
            steps {
                script {

                   waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }

        }

        
    }

}
